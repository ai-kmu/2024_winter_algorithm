class Solution:
    def arrangeCoins(self, n: int) -> int:
        l =0
        r = n

        while l <= r :
            m = (l+r)//2
            result = m*(m+1)//2

            if result == n: 
                return m
            elif result < n:
                l = m + 1
            else : # result > n
                r = m - 1

        return r
